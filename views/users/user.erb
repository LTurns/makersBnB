<body>

<div class="container">
<center>

<h1>Account Info</h1>

<p><%= @user.email %></p>

  <% @listings.each do |listing|%>
    <p><%= listing.name %></p>
    <p><%= listing.description %></p>
    <p>Â£<%= listing.price %></p>
    <% listing.pictures.each do |picture| %>
      <img src="<%= picture["url"] %>" alt=""/>
    <% end %>
    <form action="/listings/<%= listing.id %>/edit">
      <input id="button" type="submit" name="" value="Edit">
    </form>
    <form action="/listings/<%= listing.id %>" method="post">
      <input type='hidden' name='_method' value='DELETE'/>
      <input id="button" type="submit" value="Delete" />
    </form>
  <% end %>
  </center>

